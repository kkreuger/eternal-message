{{#if message}}
    <div style="background-color: darkcyan;border-radius:3px;padding:5px;">
        <p style="color: white;">{{ message }}</p>
    </div>
{{/if}}

{{#if error}}
<div style="background-color: rgb(236, 90, 90);border-radius:3px;padding:2px 10px; margin-bottom:10px">
    <p style="color: white;">{{ error }}</p>
</div>
{{/if}}